<% if object.errors.present? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "shared._error_messages.error" %>
      <%= pluralize(object.errors.size, t("shared._error_messages.error")) %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |errors| %>
        <li><%= errors %></li>
      <% end %>
    </ul>
  </div>
<% end %>
