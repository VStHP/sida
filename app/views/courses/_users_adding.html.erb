<li>
  <%= image_tag user.avatar.url %>
  <%= link_to user.name, "#" %>
  <%= form_for(@course.user_courses.build) do |f| %>
    <div><%= hidden_field_tag :user_id, user.id %></div>
    <div><%= hidden_field_tag :course_id, @course.id %></div>
    <%= f.submit t("courses._adding.add"), class: "btn btn-success" %>
  <% end %>
</li>
