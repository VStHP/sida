<li>
  <%= image_tag user.avatar.url %>
  <%= link_to user.name, "#" %>
  <% unless @course.finish? %>
    <%= form_for (user_course_ob @course, user), html: { method: :delete } do |f| %>
      <div><%= hidden_field_tag :user_id, user.id %></div>
      <div><%= hidden_field_tag :course_id, @course.id %></div>
      <%= f.submit t("courses._added.remove"), class: "btn btn-danger" %>
    <% end %>
  <% end %>
</li>
